{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["lib/*"]
    }
  },
  "include": ["lib/**/*.js", "bin/**/*.js"],
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
    "**/__tests__/**/*.js",
    "**/*.test.js",
    "**/*.spec.js",
    "lib/residency/pt/__tests__"
  ],
  "exclude": ["node_modules", "coverage", "dist"]
}
